    </footer>

    <script>
        function addEntry() {
            let amount = document.getElementById("amount").value;
            let category = document.getElementById("category").value;
            let type = document.querySelector('input[name="type"]:checked');
            let date = document.getElementById("date").value;

            if (amount === "" || !type || date === "") {
                alert("Please fill in all fields.");
                return;
            }

            let table = document.getElementById("summary-table");
            let newRow = table.insertRow();

            newRow.insertCell(0).textContent = category;
            newRow.insertCell(1).textContent = amount;
            newRow.insertCell(2).textContent = date;
            newRow.insertCell(3).textContent = type.value;

            document.getElementById("budget-form").reset();
        }
    </script>

